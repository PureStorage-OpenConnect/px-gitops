
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: XX-namespace-XX
  name: git-server-for-git-mac
spec:
  template:
    spec:
      schedulerName: stork
      containers:
        - name: git-server-for-git-mac
          volumeMounts:
          - mountPath: /home/git/repos/git-mac
            name: git-repo-git-mac
      volumes:
      - name: git-repo-git-mac
        persistentVolumeClaim:
          claimName: git-repo-git-mac
